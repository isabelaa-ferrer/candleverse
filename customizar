    <script type="module">
        import { initializeApp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-app.js';
        import { getAuth, onAuthStateChanged, signOut } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-auth.js';
        import { getFirestore, collection, addDoc, serverTimestamp } from 'https://www.gstatic.com/firebasejs/10.7.1/firebase-firestore.js';

        // Configura√ß√£o do Firebase (SUBSTITUA com suas credenciais)
        const firebaseConfig = {
            apiKey: "SUA_API_KEY_AQUI",
            authDomain: "seu-projeto.firebaseapp.com",
            projectId: "seu-projeto-id",
            storageBucket: "seu-projeto.appspot.com",
            messagingSenderId: "123456789",
            appId: "seu-app-id"
        };

        const app = initializeApp(firebaseConfig);
        const auth = getAuth(app);
        const db = getFirestore(app);

        let currentUser = null;
        let candleDesign = null;

        // Verificar autentica√ß√£o
        onAuthStateChanged(auth, (user) => {
            if (user) {
                currentUser = user;
                loadCandleDesign();
            } else {
                window.location.href = '/login';
            }
        });

        // Carregar design da vela
        function loadCandleDesign() {
            // Tentar recuperar do sessionStorage
            const savedDesign = sessionStorage.getItem('candleDesign');
            
            if (savedDesign) {
                candleDesign = JSON.parse(savedDesign);
            } else {
                // Design de exemplo para demonstra√ß√£o
                candleDesign = {
                    cor: 'Rosa Claro',
                    aroma: 'Lavanda',
                    recipiente: 'Vidro Transparente',
                    tamanho: 'M√©dio (200g)'
                };
            }

            displayCandleDesign();
        }

        // Exibir design
        function displayCandleDesign() {
            document.getElementById('colorValue').textContent = candleDesign.cor;
            document.getElementById('aromaValue').textContent = candleDesign.aroma;
            document.getElementById('containerValue').textContent = candleDesign.recipiente;
            document.getElementById('sizeValue').textContent = candleDesign.tamanho;

            // Atualizar emoji baseado nas escolhas
            const mockup = document.getElementById('candleMockup');
            const colorEmojis = {
                'Rosa': 'üå∏',
                'Lil√°s': 'üíú',
                'Laranja': 'üß°',
                'Amarelo': 'üíõ',
                'Azul': 'üíô'
            };

            // Encontrar cor correspondente
            for (const [key, emoji] of Object.entries(colorEmojis)) {
                if (candleDesign.cor.includes(key)) {
                    mockup.textContent = `${emoji}üïØÔ∏è`;
                    break;
                }
            }
        }

        // Salvar design no Firestore
        window.saveDesign = async function() {
            if (!currentUser || !candleDesign) {
                showMessage('Erro ao salvar design', 'error');
                return;
            }

            try {
                const designData = {
                    userId: currentUser.uid,
                    userEmail: currentUser.email,
                    cor: candleDesign.cor,
                    aroma: candleDesign.aroma,
                    recipiente: candleDesign.recipiente,
                    tamanho: candleDesign.tamanho,
                    createdAt: serverTimestamp()
                };

                const docRef = await addDoc(collection(db, 'designs'), designData);
                console.log('Design salvo com ID:', docRef.id);
                
                showMessage('‚úÖ Design salvo com sucesso!', 'success');
            } catch (error) {
                console.error('Erro ao salvar design:', error);
                showMessage('‚ùå Erro ao salvar design. Tente novamente.', 
